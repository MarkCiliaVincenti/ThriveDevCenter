@inherits LayoutComponentBase
@inject NavigationManager navigationManager

<div class="page">
    <MediaQueryList>
        <div class="sidebar">
            <NavMenu />
        </div>

        <div class="main">
            <TopNavBar />

            @if (navigationManager.RelativeUrl().StartsWith("admin"))
            {
                <AdminNavBar />
            }

            @if (navigationManager.RelativeUrl().StartsWith("association"))
            {
                <AssociationNavBar />
            }

            @if (navigationManager.RelativeUrl().StartsWith("tools"))
            {
                <ToolsNavBar />
            }

            <AnotherTabSigninDetector />
            <CSRFExpiryAlerter />
            <SiteNotifications />

            <div class="content px-4">
                @Body
            </div>
        </div>
    </MediaQueryList>
</div>
